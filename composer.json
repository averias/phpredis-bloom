{
  "name": "averias/phpredis-bloom",
  "description": "PHP client for RedisBloom module using phpredis extension",
  "keywords": [
    "redis",
    "redisbloom",
    "probabilistic",
    "php"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Rafael Campoy Villalta",
      "email": "rafa.campoy@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2 || ^8.0",
    "ext-redis": "^5.0.1",
    "myclabs/php-enum": "^1.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.4 || ^9.5",
    "squizlabs/php_codesniffer": "^3.5.0"
  },
  "autoload": {
    "psr-4": {
      "Averias\\RedisBloom\\": "src/RedisBloomClient"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Averias\\RedisBloom\\Tests\\": "tests"
    }
  },
  "config": {
    "optimize-autoloader": true
  },
  "scripts": {
    "manifest": [
      "@composer validate"
    ],
    "autoload": [
      "@composer dump-autoload --optimize"
    ],
    "run-tests": [
      "@manifest",
      "@autoload",
      "vendor/bin/phpunit"
    ],
    "git-reset": [
      "git reset --hard"
    ],
    "update-all": [
      "@composer self-update --no-interaction",
      "@composer update --optimize-autoloader --no-interaction"
    ]
  }
}
